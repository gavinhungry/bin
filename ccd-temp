#!/bin/bash

CCD_TOTAL=0
CCD_COUNT=0

for CCD in /sys/class/hwmon/hwmon*/temp*_label; do
  if grep -q 'Tccd' "$CCD"; then
    CCD_FILE="${CCD%_*}_input"
    CCD_VAL=$(cat "$CCD_FILE")
    CCD_TOTAL=$((CCD_TOTAL + CCD_VAL))
    CCD_COUNT=$((CCD_COUNT + 1))
  fi
done

CCD_AVG=$((CCD_TOTAL / CCD_COUNT))
printf "%.0fÂ°C\n" "$(echo "$CCD_AVG / 1000" | bc -l)"
