#!/bin/bash

PROFILE_DIR=${HOME}/.rdp
PROFILE=${PROFILE_DIR}/${1:-default}.rdp

if [ -f ${PROFILE} ]; then
  RDP_HOSTNAME=$(grep "^full address:s:" ${PROFILE} | cut -d':' -f3)
  RDP_OPTIONS=$(grep "^xfreerdp:s:" ${PROFILE} | cut -d':' -f3-)

  shift
  xfreerdp ${PROFILE} /title:${RDP_HOSTNAME} ${RDP_OPTIONS} "$@"
else
  xfreerdp "$@"
fi
