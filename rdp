#!/bin/bash

source $(dirname "${BASH_SOURCE[0]}")/abash/abash.sh

PROFILE_DIR=${HOME}/.rdp
PROFILE_NAME=$(fnfarg)
PROFILE=$(readlink -f ${PROFILE_DIR}/${PROFILE_NAME:-default})

[ -f "$PROFILE" ] || die 'profile not found'

source "$PROFILE"

WINDOW_TITLE="${RDP_TITLE:-$RDP_SERVER} - Remote Desktop"

if [ "$RDP_NMB" == "1" ]; then
  RDP_SERVER=$(nmbip "$RDP_SERVER")
fi

if arge fullscreen; then
  RDP_ARGS+=" /f"
fi

if [ -n "$RDP_PROXY" ]; then
  RDP_ARGS+=" /proxy:$RDP_PROXY"
fi

exec xfreerdp \
  -floatbar \
  /bpp:24 \
  /network:lan \
  /audio-mode:1 \
  ${RDP_ARGS} \
  /title:"$WINDOW_TITLE" \
  /v:"${RDP_SERVER}" \
  /d:"${RDP_DOMAIN}" \
  /u:"${RDP_USER}" \
  /p:"${RDP_PASSWORD}" \
  /w:"${RDP_WIDTH}" \
  /h:"${RDP_HEIGHT}"
