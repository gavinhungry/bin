#!/bin/bash

set -euo pipefail

source "$(dirname "${BASH_SOURCE[0]}")"/abash/abash.sh
sudo -v || exit 1

sigint

bannerline -f 'Updating pacman databases'
pacman -Syy

bannerline 'Updating packages'
pacman -Su --noconfirm

if pacman -Qdtq &> /dev/null; then
  bannerline 'Removing unrequired dependencies'
  pacman -Rsc $(pacman -Qdtq) --noconfirm
fi

bannerline 'Cleaning pacman cache'
if [ "$(printenv NO_PACMAN_CACHE)" == 1 ]; then
  sudo paccache -rk0 | awk NF
else
  sudo paccache -rk1 | awk NF
  sudo paccache -ruk0 | awk NF
fi

if [ -x /usr/bin/npm ]; then
  bannerline 'Updating global Node modules'

  for PKG in $(npm -g outdated --parseable --depth=0 | cut -d: -f4); do
    npm -g install "$PKG"
  done
fi
