#!/bin/bash

clean() {
  tr -s " " | cut -d":" -f2- | xargs
}

IFS=$(echo -en "\n\b")
CPU=$(lscpu | grep ^'Model name:' | clean)
SOCKETS=$(lscpu | grep ^'NUMA node(s):' | clean)
THREADS=$(lscpu | grep ^'CPU(s):' | clean)

CLEANCPU=$(echo "${CPU}" | sed -r 's/\((R|TM)\)//g' | sed -r 's/\sCPU\s/ /g')

OUTPUT=""
[ "$SOCKETS" -ne 1 ] && OUTPUT+="$SOCKETS x "
OUTPUT+="$CLEANCPU [$THREADS]"
echo $OUTPUT
