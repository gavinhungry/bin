[Unit]
Description=Teams Busylight
Requires=xfce4-session.target
After=xfce4-session.target

[Service]
EnvironmentFile=/home/gavin/.config/user-dirs.dirs
Environment="PATH=/home/gavin/bin:/home/gavin/.local/bin:/usr/bin"
ExecStart=/home/gavin/bin/services/teams-busylightd
ExecStop=/home/gavin/.local/bin/busylight off

[Install]
WantedBy=xfce4-session.target
